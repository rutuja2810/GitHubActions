# .github/workflows/manual-trigger.yml

name: Manual Saga Run

on:
  workflow_dispatch:
    inputs:
      target_env:
        description: 'Target environment (e.g., staging, prod)'
        required: true
        default: 'staging'

jobs:
  run-task:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Echo selection
        run: echo "Deploying to ${{ github.event.inputs.target_env }} environment"
