name: Deploy with Environment-Specific Variables

on:
  workflow_dispatch:
    inputs:
      env:
        description: 'Environment'
        required: true
        default: dev

jobs:
  deploy:
    runs-on: ubuntu-latest
    environment:
      name: ${{ github.event.inputs.env }}

    steps:
      - name: Show environment-specific variable
        run: echo "abc value is $abc"
        env:
          abc: ${{ vars.abc }}
